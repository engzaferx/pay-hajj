<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance:"
        android:layout_margin="12dp"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/trash_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/trash"
            android:scaleType="center"
            android:layout_marginRight="5dp"
            android:padding="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trash Management"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/lost_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/lost"
            android:scaleType="center"
            android:padding="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost and Found"
            android:layout_gravity="center"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/help_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/help"
                android:layout_marginRight="5dp"
                android:scaleType="center"
                android:padding="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help People"
                android:layout_gravity="center"/>


            <ImageButton
                android:id="@+id/children_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/babies"
                android:scaleType="centerCrop"
                android:padding="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kids found"
                android:layout_gravity="center"/>


    </LinearLayout>
</LinearLayout>
</RelativeLayout>